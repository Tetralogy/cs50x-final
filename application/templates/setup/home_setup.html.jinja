<div class="d-flex align-items-center justify-content-center vh-100">
    <div>
        <h3 class="text-center">Home Size</h3>
        <form
            class="d-flex flex-column align-items-center"
            hx-post="/"
            hx-on::after-request="htmx.trigger('#flash-messages', 'flashUpdate')"
            hx-swap="none"
        >
            <div class="form-floating mb-3">
                <input
                    autocomplete="off"
                    autofocus
                    class="form-control"
                    id="home_name"
                    name="home_name"
                    placeholder="New Home Name"
                />
                <label for="home_name">New Home Name</label>
            </div>
            <div class="form-floating">
                <select
                    class="form-select"
                    id="floatingSelect"
                    aria-label="Floating label select example"
                >
                    <option selected disabled>Home Type</option>
                    <option value="1">Single Level</option>
                    <option value="2">Multi-level</option>
                </select>
                <label for="floatingSelect">Home Type</label>
            </div>
            <div class="form-floating">
                <select
                    class="form-select"
                    id="floatingSelect"
                    aria-label="Floating label select example"
                >
                    <option selected disabled>Home Size</option>
                    <option value="1">0 - 500 sqft</option>
                    <option value="2">500 - 1000 sqft</option>
                    <option value="3">1000 - 1500 sqft</option>
                    <option value="4">1500 - 2000 sqft</option>
                    <option value="5">2000+ sqft</option>
                </select>
                <label for="floatingSelect">Approximate Home Size</label>
            </div>
            <button class="btn btn-primary" type="submit">Next step</button>
        </form>
    </div>
</div>
