{% extends "base/layout.html" %}
{% block title %}
    Tasks
{% endblock %}

{% block main %}

    <h1>This is a view of all tasks for the user</h1>

    <div
                class="row g-0 row-cols-4 container-fluid bg-dark border border-success border-5 rounded-bottom-4 p-1"
                id="task-list-loader"
                hx-get="/show_list/"
                hx-vals='{"list_type": "Task", "multiple": "True"}'
                hx-trigger="load once"
                hx-swap="outerHTML"
                hx-indicator="#updating-indicator"
            >
                <input id="dummy-placeholder" type="hidden" name="items" />
                
            </div>

{% endblock %}
