{% extends "base/layout.html" %}
{% block title %}
    Create New Home Form
{% endblock %}

{% block main %}
    <h1>Create New Home</h1>
    <p>Please follow the steps below to set up your home:</p>
    <ol>
        <li><strong>Enter Home Name:</strong> Choose a unique name for your home.</li>
        <li><strong>Select Home Type:</strong> Use the dropdown menu to select the type of your home.</li>
        <li><strong>Specify Home Layout:</strong> Indicate if your home is multi-story by toggling the checkbox.</li>
        <li><strong>Submit Form:</strong> Click the "Submit" button to save your home details.</li>
    </ol>
    <form action="/create/Home" method="post">
        <div class="form-floating mb-3" hx-target="this" hx-swap="outerHTML">
            <input hx-post="/validate/Home" hx-indicator="#updating-indicator"
                type="text"
                class="form-control"
                id="HomeName"
                placeholder="Home Name"
                name="name_input"
                required
            />
            <label for="HomeName">Home Name</label>
        </div>
        <div class="form-floating mb-3">
            <select
                class="form-select"
                id="HomeType"
                aria-label="Type of home"
                name="home_type"
                required
            >
                <option value="" selected disabled>Type of home</option>
                <option value="house">House</option>
                <option value="apartment">Apartment</option>
                <option value="condominium">Condominium</option>
                <option value="trailer">Trailer</option>
                <option value="van">Van</option>
                <option value="tent">Tent</option>
                <option value="cardboard box">Cardboard box</option>
                <option value="boat">Boat</option>
                <option value="other" disabled>
                    Other #[ ]: User input custom type
                </option>
            </select>
            <label for="HomeType">Type of home</label>
        </div>
        <div class="hstack gap-1">
            Single-Story
            <div class="form-switch form-check-inline mx-0">
                <input
                    class="form-check-input"
                    type="checkbox"
                    id="multifloor_check"
                    name="multifloor"
                />
                Multi-Story
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
{% endblock %}