{% for category, message in messages %}
    <div class="alert alert-{{ category }} flash-message" 
        role="alert"
        hx-get="/remove-flash"
        hx-trigger="load delay:5s"
        hx-swap="outerHTML swap:1s">
            {{ message }}
            <button 
                    hx-get="/remove-flash"
                    hx-target="closest div"
                    hx-swap="outerHTML swap:1s"
                    aria-label="Close">
                <span aria-hidden="true">&times;</span>
        </button>
    </div>
{% endfor %}