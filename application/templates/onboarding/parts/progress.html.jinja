    <div class="progress-bar" role="progressbar" style="width: {{ progress }}%;" aria-valuenow="{{ progress }}" aria-valuemin="0" aria-valuemax="100"></div>
    <ul class="list-group list-group-flush">
        {% for step in steps %}
            <li class="list-group-item {{ 'bg-success' if step.completed else '' }}">
                {{ step.name }}
                <form hx-patch="/onboarding/progress" hx-trigger="click" hx-target="#progress">
                    <input type="hidden" name="step" value="{{ step.name }}">
                    {% if step.name == 'profile_picture' %}
                        <input type="text" name="profile_picture_url" value="{{ current_user.profile_picture_url }}">
                    {% elif step.name == 'home' %}
                        <select name="home_id" hx-post="/onboarding/progress">
                            {% for home in current_user.homes %}
                                <option value="{{ home.home_id }}" {% if current_user.active_home == home %}selected{% endif %}>{{ home.home_name }}</option>
                            {% endfor %}
                        </select>
                    {% elif step.name == 'floor' %}
                        <select name="floor_id" hx-post="/onboarding/progress">
                            {% for floor in current_user.active_home.floors %}
                                <option value="{{ floor.floor_id }}" {% if current_user.active_home.active_floor == floor %}selected{% endif %}>{{ floor.floor_name }}</option>
                            {% endfor %}
                        </select>
                    {% elif step.name == 'room' %}
                        <select name="floor_id" hx-post="/onboarding/progress">
                            {% for floor in current_user.active_home.floors %}
                                <option value="{{ floor.floor_id }}" {% if current_user.active_home.active_floor == floor %}selected{% endif %}>{{ floor.floor_name }}</option>
                            {% endfor %}
                        </select>
                        <select name="room_ids" hx-post="/onboarding/progress" multiple>
                            {% for room in current_user.active_home.active_floor.rooms %}
                                <option value="{{ room.room_id }}" selected>{{ room.room_name }}</option>
                            {% endfor %}
                        </select>
                    {% elif step.name == 'walkthrough' %}
                        <button type="submit" class="btn btn-success">Complete Walkthrough</button>
                    {% endif %}
                </form>
            </li>
        {% endfor %}
