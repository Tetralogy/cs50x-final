{% if not sublevel %}
{% set sublevel = 0 %}
{% set sublevel_limit = 100 %}
{% endif %}
sublevel: {{ sublevel }}
{% if sublevel < sublevel_limit %}
{% set sublevel = sublevel + 1 %}
    <div class="border border-success p-5 sortable dropzone"
    id="sublist-loader-{{ entry.id }}"
    hx-get="/show_list/"
    hx-trigger="load"
    hx-vals='{"parent_entry_id": "{{ entry.id }}", "sublevel": "{{ sublevel }}", "sublevel_limit": "{{ sublevel_limit }}", "view_override":"hierarchy"}'
    data-id="{{ entry.id }}"
    data-name="{{ entry.get_item().name }}"
    data-order="{{ entry.order }}"
    
    data-model="{{ entry.item_model }}"
    
    >
    {# sublists go here if found #}
        {#<div class="dz-label"
        id="sublist-dropzone-{{ entry.id }}"
        
        
        >
        DROP HERE {{ entry.id }}
        </div>#}
    </div>
{% endif %}