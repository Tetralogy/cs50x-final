<div
    class="input-group mb-0"
    id="{{entry.item_model}}list-{{ entry.id }}"
    data-id="{{ entry.id }}"
>
    <span id="handle" class="handle input-group-text">↕️</span>
    <span
        class="input-group-text"
        id="floor-{{ entry.item_id }}"
        hx-put="/rename/{{ entry.item_model }}/{{ entry.item_id }}"
        hx-target="this"
        hx-trigger="change"
        hx-include="#input_{{entry.item_model}}_name-{{ entry.id }}"

    >
        <input type="text" id="input_{{entry.item_model}}_name-{{ entry.id }}" name="input_name" placeholder="{{ entry.get_item().floor_name }}" style="margin-top: 10px; padding: 10px; width: 200px;"/>
    {{ entry.get_item().floor_name }}
    </span>
    <span class="form-check">
        <input class="form-check-input" type="radio" name="ground_floor" id="radio-{{ entry.id }}" value="{{ entry.item_id }}"
            {% if entry.id == 1 %}
                checked
            {% endif %}>
        <label class="form-check-label" for="radio-{{ entry.id }}">
            set as ground floor
        </label>
    </span>
    <span class="input-group-text">({{ entry.order }})</span>
    <button class="btn btn-danger"
    
            hx-delete="/delete/{{ list_obj.id }}/{{ entry.id }}"
            hx-confirm="Are you sure you want to delete this floor? {{ list_obj.id }}/{{ entry.id }}"
            hx-target="#floor-list-container"
            class="btn btn-danger"
            >X</button>
</div>
