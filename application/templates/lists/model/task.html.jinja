<div 
    class="col img-thumbnail grabbable d-flex justify-content-between align-items-center"
    id="{{ entry.item_model }}list-{{ entry.id }}"
    data-id="{{ entry.id }}"
    data-name="{{ entry.get_item().name }}"
    data-order="{{ entry.order }}"
    data-list_id="{{ entry.user_list_id }}"
    data-model="{{ entry.item_model }}"
    style="background-image: url('https://picsum.photos/1920/1080?random={{ entry.id }}'); background-size: cover;"

                data-bs-toggle="tooltip"
                data-bs-html="true"
                data-bs-placement="left"
                data-bs-title="<u>Drag</u> to <span class='text-nowrap'><b>reorder</b> {{entry.item_model}}</span>"
>  

<div id="drag-outside-indicator" style="display: none; position: fixed; z-index: 1000;">ğŸš«</div>
<input type='hidden' name='items' value='{{ entry.id }}'/>

{% include 'lists/name.html.jinja' %}
    {#<p class="bg-dark">order: {{ entry.order }}</p>#}

        <button
        class="btn btn-danger"
        hx-delete="/delete/entry/{{ entry.id }}"
        hx-confirm="Are you sure you want to delete this task? list#{{ entry.user_list_id }}/Entry#{{ entry.id }} {{ entry.get_item().name }}"
        hx-swap="delete"
        hx-target="#{{ entry.item_model }}list-{{ entry.id }}"
        hx-vals='{"code": 200}'
        class="btn btn-danger float-end"
        type="button"
    >
        X
    </button>
    <h3> sublevel: {{ sublevel }}</h3>
{% if sublevel < sublevel_limit %}
{% set sublevel = sublevel + 1 %}
    <div class="border border-success"
    hx-get="/show_list/"
    hx-trigger="load"
    hx-vals='{"parent_entry_id": "{{ entry.id }}", "sublevel": "{{ sublevel }}", "sublevel_limit": "{{ sublevel_limit }}"}'
    >
    sublists here?
    </div>
{% endif %}
</div>